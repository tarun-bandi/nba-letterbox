{
  "expo": {
    "name": "NBA Letterbox",
    "slug": "nba-letterbox",
    "scheme": "nba-letterbox",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "backgroundColor": "#0a0a0a",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0a0a0a"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.tarunbandi.nbaletterbox",
      "associatedDomains": ["applinks:nba-letterbox.vercel.app"]
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0a0a0a"
      },
      "package": "com.tarunbandi.nbaletterbox",
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "nba-letterbox.vercel.app",
              "pathPrefix": "/game"
            },
            {
              "scheme": "https",
              "host": "nba-letterbox.vercel.app",
              "pathPrefix": "/user"
            },
            {
              "scheme": "https",
              "host": "nba-letterbox.vercel.app",
              "pathPrefix": "/list"
            },
            {
              "scheme": "https",
              "host": "nba-letterbox.vercel.app",
              "pathPrefix": "/tag"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#c9a84c"
        }
      ],
      [
        "expo-contacts",
        {
          "contactsPermission": "Allow NBA Letterbox to access your contacts to find friends on the app."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
